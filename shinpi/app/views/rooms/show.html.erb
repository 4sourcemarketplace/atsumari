<% if @user_privilege %>
<div id="room-show-head" class="shinpi-headings">
<h1> <%= @room.name %></h1>
<% if @user_private == @user_privilege %>
<h5>Owner Room Wager</h5>
<%= link_to "New Room Wager", new_room_activity_path(@room), class: "btn btn-primary btn-md"  %>
