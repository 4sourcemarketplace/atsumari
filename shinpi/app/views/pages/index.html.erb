<% content_for :top_content do %>
  <div class="jumbotron">
    <div class="container">
      <% if !current_user %>
      <div class="headerings">
      <h1>Welcome!</h1>
      <h4>New Users</h4>
      <p>
        <%= link_to 'Register', new_user_registration_path, class: 'btn btn-primary btn-lg' %>
      </p>
      </div>
      <% else %>
      <h1> Welcome <%=current_user.name%>, what are you looking for? </h1>
     <% end %>
     <% end %>
    </div>
  </div>
<div class="room-cards">
<% if current_user %>
<div class="gambling">
<h2>Gambling</h2><br>
<% @gambling.each do |room| %>
  <div class="card" style="width: 18rem">
  <%= image_tag ("/assets/mockup/samurai-thumbnail.jpg"), class: "card-img-top"%>
  <div class="card-body">
    <h5 class="card-title"><%= room.name %></h5>

    <a href="#" class="btn btn-primary"><%= room.room_type.capitalize %> Room</a>
  </div>
</div>
<% end %><br>
</div>
<div class="sports">
<h2>Sports</h2><br>
<% @sports.each do |room| %>
  <div class="card" style="width: 18rem;">
<%= image_tag ("/assets/mockup/samurai-thumbnail.jpg"), class: "card-img-top"%>
  <div class="card-body">
    <h5 class="card-title"><%= room.name %></h5>

    <a href="#" class="btn btn-primary"><%= room.room_type.capitalize %> Room</a>
  </div>
</div>
<% end %><br>
</div>
<div id="task-form" style="display:none;"></div>

<div class="finance">
<h2>Finance</h2><br>
<% @finance.each do |room| %>
  <div class="card" style="width: 18rem;">
  <%= image_tag ("/assets/mockup/samurai-thumbnail.jpg"), class: "card-img-top"%>
  <div class="card-body">
    <h5 class="card-title"><%= room.name %></h5>
    <a href="#" class="btn btn-primary"><%= room.room_type.capitalize %> Room</a>
  </div>
</div>
<% end %>
</div>
<% end %>
</div>
